# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-jwt-secret-key-here
BYPASS_AUTH=true

# OpenAI Whisper Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Speech Configuration (Optional)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Azure Cognitive Services Configuration (Optional)
AZURE_SPEECH_KEY=your-azure-speech-subscription-key
AZURE_SPEECH_REGION=southeastasia

# Assembly AI Configuration (Optional)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Database Configuration (Optional - for future implementation)
DATABASE_URL=mongodb://localhost:27017/transcription
REDIS_URL=redis://localhost:6379

# File Processing Configuration
MAX_CONCURRENT_JOBS=3
MAX_FILE_SIZE_MB=500
MAX_DURATION_HOURS=3

# Cleanup Service Configuration
TEMP_FILE_RETENTION_HOURS=24
PROCESSED_FILE_RETENTION_DAYS=30
LOG_FILE_RETENTION_DAYS=7
BACKUP_RETENTION_DAYS=90

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Cloud Storage Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=your-s3-bucket-name

# Application Settings
APP_NAME=Indonesian Audio Transcription
APP_VERSION=1.0.0
CONTACT_EMAIL=support@yourdomain.com

# Feature Flags
ENABLE_GOOGLE_SPEECH=false
ENABLE_AZURE_SPEECH=false
ENABLE_ASSEMBLYAI=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_CLOUD_STORAGE=false

# Performance Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
COMPRESSION_LEVEL=6

# Security Settings
HELMET_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Development Settings
DEBUG=transcription:*
VERBOSE_LOGGING=false